[user]
	email = andrew@schwartzmeyer.com
	name = Andrew Schwartzmeyer
[credential]
	helper = cache --timeout 30000 # seconds
[core]
	editor = "emacsclient -c"
	excludesfile = ~/.gitignore_global
	abbrev = 12
[commit]
	verbose = true
[log]
	decorate = true
	abbrevCommit = true
[format]
	pretty = oneline
[pull]
	ff = true
[push]
	default = simple
[merge]
	tool = emerge
[rerere]
	enabled = true
[color]
	ui = true
[alias]
        backup = push --mirror backup
[include]
	path = ~/.gitconfig_local
