## aliases
# emacs
alias e='emacsclient -n'
alias ec='emacsclient -c -n'
alias et='emacsclient -t'

# misc
alias more='less'
alias df='df -h'
alias du='du -c -h'
alias ping='ping -c 5'
alias root='sudo su'

# ls
alias lr='ls -R'                    # recursive ls
alias ll='ls -l'
alias la='ls -A'
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | less'

# power
alias shutdown='sudo shutdown -hP now'
alias reboot='sudo reboot now'

# disk usage
alias du='du -h'
alias dut='du -c'

if [[ $OSTYPE == darwin* ]]
then
    alias emacs="open -a /Applications/Emacs.app $1"
    alias sleep='shutdown -s now'
    alias ls='ls -h -G'
    alias o='open'
    alias unlock_files='chflags -R nouchg *'
    alias pup='brew update && brew upgrade && pcl && fresh update'
    alias pag='brew search'
    alias pcl='brew cleanup && brew prune'
    alias pi='brew install'
    alias pr='brew uninstall'
    alias psh='brew info'
elif [[ $OSTYPE == linux-gnu ]]
then
    alias shutdown='sudo shutdown -P now'
    alias reboot='sudo shutdown -r now'
    alias halt='sudo halt -P'
    alias ls='ls -h --color=auto'
    alias cp='cp -i'
    alias mv='mv -i'
    alias rm='rm -I'                    # 'rm -i' prompts for every file
    alias ln='ln -i'
    alias chown='chown --preserve-root'
    alias chmod='chmod --preserve-root'
    alias chgrp='chgrp --preserve-root'
    alias pup='sudo aptitude update && sudo aptitude upgrade -y && pcl && fresh update'
    alias pag='aptitude search'
    alias pcl='sudo aptitude autoclean'
    alias pi='sudo aptitude install'
    alias pr='sudo aptitude purge'
    alias psh='aptitude show'
    alias dia='sudo dpkg -i ./*.deb'
    alias di='sudo dpkg -i'
fi

## environment
TERM="xterm-256color"
ALTERNATE_EDITOR=""
EDITOR="emacsclient -c -n"

## GitHub API
github_token="$HOME/.github"
[ -e $github_token ] && source $github_token

## homebrew GitHub API
homebrew_token="$HOME/.homebrew"
[ -e $homebrew_token ] && source $homebrew_token

## boxen
[ -e /opt/boxen/env.sh ] && source /opt/boxen/env.sh

## path
source ~/.path_edit.sh
path_front "bin"
path_back "/sbin" "/bin" "/usr/sbin" "/usr/bin" "/usr/local/bin" "/usr/texbin" "~/bin"

## prompt
source ~/.liquidprompt/liquidprompt
