# Setup environment
pathadd() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="$1:$PATH"
    fi
}
paths=("$HOME/bin" "/usr/local/bin")
pathadd paths

TERM="xterm-256color"
EDITOR="emacsclient -c"

# rvm setup
rvm="$HOME/.rvm/scripts/rvm"
if [ -e $rvm ]; then
    source $rvm
fi
