# external repositories
fresh andschwa/fresh bin/fresh --bin
fresh andschwa/oh-my-zsh . --file=~/.oh-my-zsh/

# duply setup for marvin
if [[ $(hostname -s) == "marvin" ]]; then
    fresh bin/duply-backup --bin
    fresh bin/duply-verify --bin
    fresh duply --file=~/.duply/
fi

# host dependent user crontab (source with crontab ~/.crontab)
fresh cron/crontab.$(hostname -s) --file=~/.crontab --ignore-missing

# git configuration
fresh git/gitconfig --file
fresh git/gitignore_global --file

# zsh setup
fresh zsh/aliases.$(uname)
fresh zsh/aliases
fresh zsh/plugins.$(uname)
fresh zsh/plugins
fresh zsh/zshrc --file
